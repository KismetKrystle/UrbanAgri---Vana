{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"], // Ensure this points to the correct location
    "skipLibCheck": true // Skip type checking for libraries
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
